{
    "name": "vulcdataformat",
    "displayName": "VulcDataFormat",
    "description": "Language support for Textual VDF",
    "version": "0.3.0-wip",
    "engines": {
        "vscode": "^1.51.0"
    },
    "contributes": {
        "languages": [
            {
                "id": "vdf",
                "aliases": [
                    "VDF",
                    "vulcdataformat"
                ],
                "extensions": [
                    ".vdf",
                    ".tvdf"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "vdf",
                "scopeName": "source.vdf",
                "path": "./syntaxes/vdf.tmLanguage.json"
            }
        ]
    }
}
